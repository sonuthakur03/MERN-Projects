<%- include("partials/header.ejs") %>
	<body>
		<div class="table-container">
			<div class="table-title">Update Todo</div>
			<div>
				<a href="/" class="back">Back</a>
			</div>
			<br />
			<form action="/update-todo/<%= todo._id %>" method="POST">
				<div class="update-todo">
					<div>
						<label for="title">Title:</label>
						<input
							type="text"
							id="title"
							name="title"
							value="<%= todo.title %>"
							placeholder="Type title here"
							required />
					</div>
					<div>
						<label for="description">Description:</label>
						<textarea
							id="description"
							name="desc"
							placeholder="Type description here..."
							required> <%= todo.desc %></textarea>
					</div>
					<button type="submit" class="btn">Update Todo</button>
				</div>
			</form>
		</div>
	</body>
</html>
